<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipalUsuario">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoPrincipalCliente"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logowhitedoc" />

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="316dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnCitaMedica"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="solcitarMedico"
                    android:text="@string/btnCitaCliente" />

                <Button
                    android:id="@+id/btnHistPropio"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="verSalud"
                    android:text="@string/btnHistorialCliente" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMedPropio"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="agregarMedicamento"
                        android:text="@string/btnMedCliente" />

                    <Button
                        android:id="@+id/btnModUsuario"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2.5dp"
                        android:layout_weight="1"
                        android:onClick="agregarMedicamento"
                        android:text="@string/btnModPerfilCliente" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnEmergenciaPropia"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="7"
                    android:onClick="agregarMedicamento"
                    android:text="@string/btnEmergencia" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>